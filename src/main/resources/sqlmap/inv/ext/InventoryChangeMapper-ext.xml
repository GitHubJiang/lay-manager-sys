<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.greeston.dao.inv.InventoryChangeDao">
	<resultMap id="InventoryChangeResultExt" type="com.lay.shop.greeston.model.inv.InventoryChange">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="inventoryChangeColumnsExt">
	    <![CDATA[
	        	id as id,
	        	brand_code as brandCode,
	        	shop_code as shopCode,
	        	sku_code as skuCode,
	        	quantity as quantity,
	        	status as status,
	        	inv_type as invType,
	        	create_time as createTime,
	        	update_time as updateTime,
	        	user_id as userId,
	        	remark as remark
	    ]]>
	</sql>
	
	<sql id="inventoryChangeDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="brandCode!=null">
					and brand_code = #{brandCode}
				</if>
	       
				<if test="shopCode!=null">
					and shop_code = #{shopCode}
				</if>
	       
				<if test="skuCode!=null">
					and sku_code = #{skuCode}
				</if>
	       
				<if test="quantity!=null">
					and quantity = #{quantity}
				</if>
	       
				<if test="status!=null">
					and status = #{status}
				</if>
	       
				<if test="invType!=null">
					and inv_type = #{invType}
				</if>
	       
				<if test="createTime!=null">
					and create_time = #{createTime}
				</if>
	       
				<if test="updateTime!=null">
					and update_time = #{updateTime}
				</if>
	       
				<if test="userId!=null">
					and user_id = #{userId}
				</if>
	       
				<if test="remark!=null">
					and remark = #{remark}
				</if>
		</where>
	</sql>
	
</mapper>
