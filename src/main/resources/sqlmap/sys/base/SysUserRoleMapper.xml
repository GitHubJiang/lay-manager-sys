<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.modules.sys.dao.SysUserRoleDao">
	<resultMap id="SysUserRoleResult" type="com.lay.shop.modules.sys.model.SysUserRole">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="sysUserRoleColumns">
	    <![CDATA[
	        	id as id,
	        	user_id as userId,
	        	role_id as roleId
	    ]]>
	</sql>
	
		<!-- 如果有自增字段 -->
	
			<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
			<insert id="insert" parameterType="com.lay.shop.modules.sys.model.SysUserRole" 
				useGeneratedKeys="true" keyProperty="id" 
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        sys_user_role (
		        	user_id ,
		        	role_id 
		        ) VALUES (
		        	#{userId,javaType=Long,jdbcType=BIGINT} ,
		        	#{roleId,javaType=Long,jdbcType=BIGINT} 
		        )
		    ]]>
	
			</insert>
		
		<update id="update" parameterType="com.lay.shop.modules.sys.model.SysUserRole">
	    <![CDATA[
	        UPDATE sys_user_role SET
		        user_id = #{userId,javaType=Long,jdbcType=BIGINT} ,
		        role_id = #{roleId,javaType=Long,jdbcType=BIGINT} 
	        WHERE 
		        id = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from sys_user_role where
		        id = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from sys_user_role 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="SysUserRoleResult" flushCache="false">
			select <include refid="sysUserRoleColumns" />
		    <![CDATA[
			    from sys_user_role 
		        where 
		        id = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="SysUserRoleResult" flushCache="false">
			select <include refid="sysUserRoleColumns" />
			    from sys_user_role 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="sysUserRoleDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="userId!=null">
					and user_id = #{userId}
				</if>
	       
				<if test="roleId!=null">
					and role_id = #{roleId}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from sys_user_role 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from sys_user_role 
		<include refid="sysUserRoleDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from sys_user_role 
		<include refid="sysUserRoleDynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPage" resultMap="SysUserRoleResult">
    	select <include refid="sysUserRoleColumns" />
	    from sys_user_role 
		<include refid="sysUserRoleDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="SysUserRoleResult">
    	select <include refid="sysUserRoleColumns" />
	    from sys_user_role 
		<include refid="sysUserRoleDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="SysUserRoleResult">
    	select <include refid="sysUserRoleColumns" />
	    from sys_user_role 
		<include refid="sysUserRoleDynamicWhere"/>
		
    </select>

	
</mapper>
