<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.modules.sys.dao.PrivilegeDao">
	<resultMap id="privilegeResult" type="com.lay.shop.modules.sys.model.Privilege">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="privilegeColumns">
	    <![CDATA[
	        	id as id,
	        	acl as acl,
	        	name as name,
	        	type as type,
	        	sort_no as sortNo
	    ]]>
	</sql>
	
		<!-- 如果有自增字段 -->
	
			<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
			<insert id="insert" parameterType="com.lay.shop.modules.sys.model.Privilege" 
				useGeneratedKeys="true" keyProperty="id" 
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        sys_privilege (
		        	acl ,
		        	name ,
		        	type ,
		        	sort_no 
		        ) VALUES (
		        	#{acl,javaType=String,jdbcType=VARCHAR} ,
		        	#{name,javaType=String,jdbcType=VARCHAR} ,
		        	#{type,javaType=Integer,jdbcType=INTEGER} ,
		        	#{sortNo,javaType=Integer,jdbcType=INTEGER} 
		        )
		    ]]>
	
			</insert>
		
		<update id="update" parameterType="com.lay.shop.modules.sys.model.Privilege">
	    <![CDATA[
	        UPDATE sys_privilege SET
		        acl = #{acl,javaType=String,jdbcType=VARCHAR} ,
		        name = #{name,javaType=String,jdbcType=VARCHAR} ,
		        type = #{type,javaType=Integer,jdbcType=INTEGER} ,
		        sort_no = #{sortNo,javaType=Integer,jdbcType=INTEGER} 
	        WHERE 
		        id = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from sys_privilege where
		        id = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from sys_privilege 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="privilegeResult" flushCache="false">
			select <include refid="privilegeColumns" />
		    <![CDATA[
			    from sys_privilege 
		        where 
		        id = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="privilegeResult" flushCache="false">
			select <include refid="privilegeColumns" />
			    from sys_privilege 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="privilegeDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="acl!=null">
					and acl = #{acl}
				</if>
	       
				<if test="name!=null">
					and name = #{name}
				</if>
	       
				<if test="ouTypeId!=null">
					and ou_type_id = #{ouTypeId}
				</if>
	       
				<if test="type!=null">
					and type = #{type}
				</if>
	       
				<if test="sortNo!=null">
					and sort_no = #{sortNo}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from sys_privilege 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from sys_privilege 
		<include refid="privilegeDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from sys_privilege 
		<include refid="privilegeDynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPage" resultMap="privilegeResult">
    	select <include refid="privilegeColumns" />
	    from sys_privilege 
		<include refid="privilegeDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="privilegeResult">
    	select <include refid="privilegeColumns" />
	    from sys_privilege 
		<include refid="privilegeDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="privilegeResult">
    	select <include refid="privilegeColumns" />
	    from sys_privilege 
		<include refid="privilegeDynamicWhere"/>
		
    </select>

    <select id="getByAcl" resultMap="privilegeResult" parameterType="String">
	    select <include refid="privilegeColumns"/>
	    <![CDATA[
	        from sys_privilege where acl = #{acl}
	    ]]>
    </select>
    
	
</mapper>
