<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.modules.sys.dao.SysMenuDao">
	<resultMap id="SysMenuResult" type="com.lay.shop.modules.sys.model.SysMenu">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="sysMenuColumns">
	    <![CDATA[
	        	id as id,
	        	name as name,
	        	acl as acl,
	        	url as url,
	        	sort_no as sortNo,
	        	parent_id as parentId
	    ]]>
	</sql>
	
		<!-- 如果有自增字段 -->
	
			<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
			<insert id="insert" parameterType="com.lay.shop.modules.sys.model.SysMenu" 
				useGeneratedKeys="true" keyProperty="id" 
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        sys_menu (
		        	name ,
		        	acl ,
		        	url ,
		        	sort_no ,
		        	parent_id 
		        ) VALUES (
		        	#{name,javaType=String,jdbcType=VARCHAR} ,
		        	#{acl,javaType=String,jdbcType=VARCHAR} ,
		        	#{url,javaType=String,jdbcType=VARCHAR} ,
		        	#{sortNo,javaType=Integer,jdbcType=INTEGER} ,
		        	#{parentId,javaType=Long,jdbcType=BIGINT} 
		        )
		    ]]>
	
			</insert>
		
		<update id="update" parameterType="com.lay.shop.modules.sys.model.SysMenu">
	    <![CDATA[
	        UPDATE sys_menu SET
		        name = #{name,javaType=String,jdbcType=VARCHAR} ,
		        acl = #{acl,javaType=String,jdbcType=VARCHAR} ,
		        url = #{url,javaType=String,jdbcType=VARCHAR} ,
		        sort_no = #{sortNo,javaType=Integer,jdbcType=INTEGER} ,
		        parent_id = #{parentId,javaType=Long,jdbcType=BIGINT} 
	        WHERE 
		        id = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from sys_menu where
		        id = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from sys_menu 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="SysMenuResult" flushCache="false">
			select <include refid="sysMenuColumns" />
		    <![CDATA[
			    from sys_menu 
		        where 
		        id = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="SysMenuResult" flushCache="false">
			select <include refid="sysMenuColumns" />
			    from sys_menu 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="sysMenuDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="name!=null">
					and name = #{name}
				</if>
	       
				<if test="acl!=null">
					and acl = #{acl}
				</if>
	       
				<if test="url!=null">
					and url = #{url}
				</if>
	       
				<if test="sortNo!=null">
					and sort_no = #{sortNo}
				</if>
	       
				<if test="parentId!=null">
					and parent_id = #{parentId}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from sys_menu 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from sys_menu 
		<include refid="sysMenuDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from sys_menu 
		<include refid="sysMenuDynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPage" resultMap="SysMenuResult">
    	select <include refid="sysMenuColumns" />
	    from sys_menu 
		<include refid="sysMenuDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="SysMenuResult">
    	select <include refid="sysMenuColumns" />
	    from sys_menu 
		<include refid="sysMenuDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="SysMenuResult">
    	select <include refid="sysMenuColumns" />
	    from sys_menu 
		<include refid="sysMenuDynamicWhere"/>
		
    </select>

	
</mapper>
