<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.modules.sys.dao.ButtonDao">
	<resultMap id="buttonResult" type="com.lay.shop.modules.sys.model.Button">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="buttonColumns">
	    <![CDATA[
	        	id as id,
	        	code as code,
	        	name as name
	    ]]>
	</sql>
	
		<!-- 如果有自增字段 -->
	
			<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
			<insert id="insert" parameterType="com.lay.shop.modules.sys.model.Button" 
				useGeneratedKeys="true" keyProperty="id" 
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        sys_button (
		        	code ,
		        	name 
		        ) VALUES (
		        	#{code,javaType=String,jdbcType=VARCHAR} ,
		        	#{name,javaType=String,jdbcType=VARCHAR} 
		        )
		    ]]>
	
			</insert>
		
		<update id="update" parameterType="com.lay.shop.modules.sys.model.Button">
	    <![CDATA[
	        UPDATE sys_button SET
		        code = #{code,javaType=String,jdbcType=VARCHAR} ,
		        name = #{name,javaType=String,jdbcType=VARCHAR} 
	        WHERE 
		        id = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from sys_button where
		        id = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from sys_button 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="buttonResult" flushCache="false">
			select <include refid="buttonColumns" />
		    <![CDATA[
			    from sys_button 
		        where 
		        id = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="buttonResult" flushCache="false">
			select <include refid="buttonColumns" />
			    from sys_button 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="buttonDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="code!=null">
					and code = #{code}
				</if>
	       
				<if test="name!=null">
					and name = #{name}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from sys_button 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from sys_button 
		<include refid="buttonDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from sys_button 
		<include refid="buttonDynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPage" resultMap="buttonResult">
    	select <include refid="buttonColumns" />
	    from sys_button 
		<include refid="buttonDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="buttonResult">
    	select <include refid="buttonColumns" />
	    from sys_button 
		<include refid="buttonDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="buttonResult">
    	select <include refid="buttonColumns" />
	    from sys_button 
		<include refid="buttonDynamicWhere"/>
		
    </select>

	
</mapper>
