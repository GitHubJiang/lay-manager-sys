<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.lay.shop.modules.sys.dao.SysUserDao">
	<resultMap id="SysUserResultExt" type="com.lay.shop.modules.sys.model.SysUser">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="sysUserColumnsExt">
	    <![CDATA[
	        	id as id,
	        	org_id as orgId,
	        	login_name as loginName,
	        	job_no as jobNo,
	        	user_name as userName,
	        	login_password as loginPassword,
	        	create_time as createTime,
	        	email as email,
	        	phone as phone,
	        	lifecycle as lifecycle
	    ]]>
	</sql>
	
	<sql id="sysUserDynamicWhereExt">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and id = #{id}
				</if>
	       
				<if test="orgId!=null">
					and org_id = #{orgId}
				</if>
	       
				<if test="loginName!=null">
					and login_name = #{loginName}
				</if>
	       
				<if test="jobNo!=null">
					and job_no = #{jobNo}
				</if>
	       
				<if test="userName!=null">
					and user_name = #{userName}
				</if>
	       
				<if test="loginPassword!=null">
					and login_password = #{loginPassword}
				</if>
	       
				<if test="createTime!=null">
					and create_time = #{createTime}
				</if>
	       
				<if test="email!=null">
					and email = #{email}
				</if>
	       
				<if test="phone!=null">
					and phone = #{phone}
				</if>
	       
				<if test="lifecycle!=null">
					and lifecycle = #{lifecycle}
				</if>
		</where>
	</sql>
	
</mapper>
